const pg = require('pg');
const conString = 'postgres://tjurqsrm:a3EMg4RiFXhLDz5mYScVBDvWlhKP-Ok7@babar.elephantsql.com:5432/tjurqsrm';

const client = new pg.Client(conString);

client.connect(function(err) {
  if(err) {
    return console.error('could not connect to postgres', err);
  }
  else { console.log('connected in controller')}
})

const statistics = {}

statistics.gameStat = (req, res) => {
const text = 'INSERT INTO performnce(string, level, total, accuracy, id, time) VALUES ($1, $2, $3, $4, $5, $6)'
const values = [req.body.string, req.body.level, req.body.total, req.body.accuracy, req.body.id, req.body.time];

client.query(text, values, function(err, result) {
    if(err) {
      return console.log('error running query', err);
    }
    res.status(200).send(result.rows)
  })
}
